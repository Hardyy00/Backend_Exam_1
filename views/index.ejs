<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <style>
      html {
        color: white;
        font-family: "Courier New", Courier, monospace;
      }
      body {
        margin: 0;
      }
      nav {
        background-color: rgb(20, 183, 20);
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .pair {
        display: flex;
        align-items: center;
        justify-content: space-around;
        gap: 1.6rem;
        margin-right: 5rem;
        color: white;
        font-weight: bolder;
        font-size: larger;
      }

      .tile {
        margin: 2rem auto;
        width: 70%;
        height: 6rem;
        background-color: steelblue;
        display: flex;
        align-items: center;
        justify-content: space-evenly;
      }

      .fir {
        color: white;
      }
      .sec button {
        width: 7rem;
        height: 5rem;
        border-radius: 16px;
        font-size: 1.5rem;
        background-color: rgb(43, 184, 43);
      }
      a:active {
        text-decoration: none;
      }
      a:visited {
        color: white;
        text-decoration: none;
      }

      nav h1 {
        margin-left: 3rem;
      }
    </style>
  </head>
  <body>
    <nav>
      <div><h1>Great Quotes</h1></div>

      <div class="pair">
        <div><p>All QUotes</p></div>
        <div>
          <p><a href="/new">New Quote</a></p>
        </div>
      </div>
    </nav>

    <% for(const com of contents){ %>

    <div class="tile">
      <div class="fir">
        <h1><%= com.quote %></h1>
        <p>- <%= com.name %></p>
      </div>

      <div class="sec">
        <button type="button"><a href="/<%= com.id%>">View</a></button>
      </div>
    </div>
    <% } %>
  </body>
</html>
